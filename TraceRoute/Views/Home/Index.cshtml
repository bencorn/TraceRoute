@{
ViewData["Title"] = "Visual Trace Route";
}
<style>
    #map {
        height: 94%;
    }
</style>
<script src="https://use.fontawesome.com/2a2baed1f3.js"></script>
<body ng-app="app" ng-controller="traceRouteController as vm">
    <div class="tr-container">
        <div class="tr-input row">
            <div class="col-sm-12">
				<div class="input-group tr-input-group">
                  <input ng-model="vm.Hostname" type="text" class="form-control" placeholder="Perform Trace Route">
                  <span class="input-group-btn">
                    <button ng-click="vm.TraceRoute()" class="btn btn-secondary" type="button">
							<i class="fa fa-search" aria-hidden="true"></i>
					</button>
                  </span>
                </div>
			</div>
        </div>
        <div class="tr-map" id="map"></div>
	</div>

    <script src = "./js/Map.js" type="text/javascript"> </script>
    <script 
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAnQJ3WLOWkGswgEVZzKXSVzr1y5n4b9f0&callback=initMap">
    </script>
</body>